@model IndexViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "_RootLayout";
}

<div id="wrapper">
    <div id="background">

    </div>
    <div id="normal">
        <div id="form-container">
            <h3>Hacker News Trends</h3>

            <p class="front-p">
                Search for occurrences of a term in our database of @Model.StoryCount.ToString("N0") story titles for stories submitted to
                <a href="https://news.ycombinator.com/" target="_blank">Hacker News</a> since 2007.
            </p>
            <form id="the-form" asp-controller="Home" asp-action="Trend" method="get">
                <input name="id" type="text" title="Enter a search term" required id="search" />
                <label for="allwords" style="display: none" class="setting-checkbox-label" id="allwords-label" title="For a search containing multiple words the story must contain all words.">
                    Search result must match all words:
                    <input type="checkbox" name="allwords" id="allwords" value="true" checked />
                </label>
                <button type="submit">Search</button>
            </form>
            <p style="text-align: center; color: #999; margin-bottom: 0; margin-top: 80px;">
    Not sure what to search? Why not try:
    <ul id="suggestion-list">
        <li><a asp-action="Trend" asp-route-id="Keras">Keras</a></li>
        <li><a asp-action="Trend" asp-route-id="Tensorflow">Tensorflow</a></li>
        <li><a asp-action="Trend" asp-route-id="Rust">Rust</a></li>
        <li><a asp-action="Trend" asp-route-id="OpenAI">OpenAI</a></li>
        <li><a asp-action="Trend" asp-route-id="PyTorch">PyTorch</a></li>
        <li><a asp-action="Trend" asp-route-id="Laravel">Laravel</a></li>
        <li><a asp-action="Trend" asp-route-id="Bitcoin">Bitcoin</a></li>
    </ul>
    <p style="margin-top: 20px; color: #999; text-align: center; font-size: 11px">
        Find the source on <a href="https://github.com/EliotJones/HnTrends" target="_blank">GitHub</a>
    </p>
</p>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $("#search").on('input', function() {
            var text = $(this).val();
            var hasSpace = text.indexOf(' ') > 0;
            if (hasSpace) {
                $("#allwords-label").show();
            } else {
                $("#allwords-label").hide();
            }
        })
    </script>
}
